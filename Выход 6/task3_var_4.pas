function greater(var f: TF): boolean;
var
    tm, c, tc: integer;
begin
    reset(f);
    read(f, tm);
    tc := tm;
    while not eof(f) do begin
        read(f, c);
        if tc > tm then
            tm := tc;
        tc := c;
    end;
    if c > tm then
        greater := True
    else
        greater := False;
end;

